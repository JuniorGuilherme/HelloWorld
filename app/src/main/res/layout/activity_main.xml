<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.notebookdell.helloworld.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
         />

    <ImageView
        android:id="@+id/bitcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Fusão do Junão comprado com bitcoin."
        android:cropToPadding="false"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/fusion" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bitcao que me deu."
        android:textColor="#ffd700"
        style="bold"
        android:layout_alignBottom="@id/bitcao"
        android:textSize="40sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/txtFone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtFone"
        android:textAlignment="center" />

</RelativeLayout>
